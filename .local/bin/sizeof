#!/bin/bash
# displays the size of a file passed in as a 1st argument

# exit if file not found
if ! [ -f $1 ]; then
    echo "$1 not found"
    exit 1
fi

# get file size from first argument
filesize="$(wc --bytes $1 | awk '{print $1}')"

# loop over different size formats
for i in "Bytes\t 1" "KiloBytes 1024" "MegaBytes 1048576" "GigaBytes 1073741824"
do
    set -- $i # make pairs into arguments
    echo -e "$1\t$( bc <<<"scale=3; $filesize / $2" )"
done
